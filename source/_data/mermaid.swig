{% if theme.mermaid.enable %}
  <script src='https://unpkg.com/mermaid@{{ theme.mermaid.version }}/dist/mermaid.min.js'></script>
  <script>
    if (window.mermaid) {
      mermaid.initialize({'theme': '{{ theme.mermaid.theme }}'});
    }
  </script>
  <style>
    .mermaid {
      background: var(--body-bg-color);
    }
  </style>
{% endif %}